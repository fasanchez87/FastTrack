<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_nombre_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <EditText
                android:id="@+id/edit_text_nombre_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine = "true"
                android:inputType="textCapCharacters"
                android:hint="Nombre Cliente"/>
        </android.support.design.widget.TextInputLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="7dp" />


        <RadioGroup
            android:id="@+id/opciones_packs_compras"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_x1_fasttrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="x1 Fast Track"
                />

            <RadioButton
                android:id="@+id/radio_x2_fasttrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x2 Fast Track" />

            <RadioButton
                android:id="@+id/radio_x3_fasttrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="x3 Fast Track" />
            <RadioButton
                android:id="@+id/radio_x4_fasttrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="x4 Fast Track" />
            <RadioButton
                android:id="@+id/radio_x5_fasttrack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="x5 Fast Track" />
        </RadioGroup>

        <Space
            android:layout_width="match_parent"
            android:layout_height="7dp" />




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_cancelar_nombre_cliente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:text="CANCELAR"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="7dp"
            android:layout_height="0dp" />


        <Button
            android:id="@+id/btn_confirmar_nombre_cliente"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ff8000"
            android:text="COMPRAR"
            android:textColor="@android:color/white" />

        <Space
            android:layout_width="7dp"
            android:layout_height="0dp" />

    </LinearLayout>

</LinearLayout>